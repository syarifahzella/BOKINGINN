<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bokingin.valid1"
    android:orientation="vertical"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama : Shenny "
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Orang : 25 Orang"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Reservasi : 17 Juni 2019"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waktu Reservasi : 19.00 - 21.00"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/buttontolak"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Validasi"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:onClick="onBackPressed"/>

</RelativeLayout>